---
Language:        Cpp
BasedOnStyle:  LLVM

# Wider lines help templates/concepts a lot
ColumnLimit: 100

# Indent inside namespaces
NamespaceIndentation: All

# Make wrapped code readable
ContinuationIndentWidth: 4
AlignAfterOpenBracket: Align
AlignOperands: Align

# Avoid whitespace explosions in concept constraints etc.
AlignTrailingComments: false
ReflowComments: false
PenaltyBreakComment: 0

# Avoid "cramming"
BinPackArguments: false
BinPackParameters: false

# More predictable wrapping for && / ||
BreakBeforeBinaryOperators: NonAssignment

BreakBeforeBraces: Attach

# Ctor init list style: commas under the colon
BreakConstructorInitializers: BeforeComma

# Modern standard
Standard: Latest

# Optional: avoid noisy diffs
AlignConsecutiveAssignments: false

AlwaysBreakTemplateDeclarations: Yes

PointerAlignment: Left
DerivePointerAlignment: false

# Helps keep template/constraint headers readable
IndentWidth: 2

RequiresClausePosition: OwnLine
